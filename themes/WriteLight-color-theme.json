{
    "name": "WriteLight",
    "type": "light",
    "colors": {
      // Base UI - Refined color palette with subtle gradients
      "editor.background": "#F9FAFB",
      "editor.foreground": "#2D3748",
      "activityBar.background": "#EBEDF0",
      "activityBar.foreground": "#2D3748",
      "activityBar.border": "#E5E7EB",
      "activityBarBadge.background": "#4F46E5",
      "activityBarBadge.foreground": "#FFFFFF",
      "sideBar.background": "#F1F5F9",
      "sideBar.foreground": "#334155",
      "sideBar.border": "#E2E8F0",
      "statusBar.background": "#E0E7FF",
      "statusBar.foreground": "#4338CA",
      "statusBar.border": "#C7D2FE",
      "titleBar.activeBackground": "#F1F5F9",
      "titleBar.activeForeground": "#334155",
      "titleBar.border": "#E2E8F0",
      
      // Editor specific - Enhanced contrast and visual cues
      "editorCursor.foreground": "#4F46E5",
      "editor.selectionBackground": "#BFDBFE90",
      "editor.selectionHighlightBackground": "#BFDBFE60",
      "editor.lineHighlightBackground": "#F1F5F980",
      "editor.lineHighlightBorder": "#E2E8F060",
      "editorLineNumber.foreground": "#94A3B8",
      "editorLineNumber.activeForeground": "#475569",
      "editorIndentGuide.background": "#E2E8F0",
      "editorIndentGuide.activeBackground": "#CBD5E0",
      "editorGroupHeader.tabsBackground": "#F1F5F9",
      "editorGroupHeader.border": "#E2E8F0",
      "editorGutter.background": "#F9FAFB",
      
      // Text editor enhancements - Improved search and highlight experiences
      "editor.findMatchBackground": "#FEF08A80",
      "editor.findMatchHighlightBackground": "#FEF08A50",
      "editor.findRangeHighlightBackground": "#F1F5F9",
      "editor.findMatchBorder": "#EAB308",
      "editor.wordHighlightBackground": "#CCFBF180",
      "editor.wordHighlightStrongBackground": "#99F6E4A0",
      "editorWidget.background": "#FFFFFF",
      "editorWidget.border": "#E2E8F0",
      "editorSuggestWidget.background": "#FFFFFF",
      "editorSuggestWidget.border": "#E2E8F0",
      "editorSuggestWidget.highlightForeground": "#4F46E5",
      "editorSuggestWidget.selectedBackground": "#EEF2FF",
      
      // Cursor AI integration - More refined chat experience
      "chat.messageBackground": "#F5F3FF",
      "chat.userMessageBackground": "#F8FAFC",
      "chat.aiResponseBorder": "#DDD6FE",
      "notebook.cellEditorBackground": "#FFFFFF",
      "notebook.cellInsertionIndicator": "#4F46E5",
      
      // UI elements - Added depth and interactive elements
      "button.background": "#4F46E5",
      "button.foreground": "#FFFFFF",
      "button.hoverBackground": "#4338CA",
      "button.border": "#4F46E510",
      "button.secondaryBackground": "#F1F5F9",
      "button.secondaryForeground": "#4F46E5",
      "button.secondaryHoverBackground": "#E0E7FF",
      "dropdown.background": "#FFFFFF",
      "dropdown.border": "#E2E8F0",
      "dropdown.listBackground": "#FFFFFF",
      "input.background": "#FFFFFF",
      "input.border": "#CBD5E0",
      "input.placeholderForeground": "#94A3B8",
      "inputOption.activeBackground": "#EEF2FF",
      "inputOption.activeBorder": "#4F46E5",
      "panel.background": "#F9FAFB",
      "panel.border": "#E2E8F0",
      "panelTitle.activeBorder": "#4F46E5",
      "panelTitle.activeForeground": "#334155",
      
      // List and trees - Better interactive elements
      "list.activeSelectionBackground": "#EEF2FF",
      "list.activeSelectionForeground": "#334155",
      "list.hoverBackground": "#F8FAFC",
      "list.highlightForeground": "#4F46E5",
      "list.inactiveSelectionBackground": "#F1F5F9",
      "list.focusOutline": "#E0E7FF",
      
      // Terminal - Refined experience
      "terminal.background": "#F9FAFB",
      "terminal.foreground": "#334155",
      "terminalCursor.foreground": "#4F46E5",
      "terminal.border": "#E2E8F0",
      
      // Tabs - Added depth and better contrast
      "tab.activeBackground": "#FFFFFF",
      "tab.activeForeground": "#334155",
      "tab.activeBorderTop": "#4F46E5",
      "tab.activeBorder": "#FFFFFF",
      "tab.inactiveBackground": "#F1F5F9",
      "tab.inactiveForeground": "#64748B",
      "tab.border": "#E2E8F0",
      "tab.hoverBackground": "#F8FAFC",
      "tab.hoverBorder": "#CBD5E0",
      
      // Editor preferences - Refined typography
      "editor.lineHeight": 1.6,
      "editor.fontSize": 14,
      "editor.letterSpacing": 0.3,
      "editor.fontFamily": "'SF Mono', Menlo, Monaco, 'Courier New', monospace",
      "editor.fontLigatures": true,
      "editor.wordWrapColumn": 80,
      "editor.rulers": [80],
      "editor.wordWrap": "bounded",
      "editor.cursorBlinking": "smooth",
      "editor.cursorSmoothCaretAnimation": "on",
      "editor.renderWhitespace": "boundary",
      "editor.renderLineHighlight": "all",
      
      // Diff and git - More subtle but clear indicators
      "diffEditor.insertedTextBackground": "#DCFCE720",
      "diffEditor.removedTextBackground": "#FEE2E220",
      "diffEditor.insertedTextBorder": "#86EFAC40",
      "diffEditor.removedTextBorder": "#FCA5A540",
      "diffEditor.border": "#E2E8F0",
      "gitDecoration.addedResourceForeground": "#16A34A",
      "gitDecoration.modifiedResourceForeground": "#2563EB",
      "gitDecoration.deletedResourceForeground": "#DC2626",
      "gitDecoration.untrackedResourceForeground": "#7C3AED",
      "gitDecoration.ignoredResourceForeground": "#94A3B8",
      "gitDecoration.conflictingResourceForeground": "#EA580C",
      
      // Bracket pairs and other code elements
      "editorBracketMatch.background": "#BFDBFE70",
      "editorBracketMatch.border": "#4F46E5",
      "editorBracketPairGuide.activeBackground1": "#4F46E550",
      "editorBracketPairGuide.activeBackground2": "#2563EB50",
      "editorBracketPairGuide.activeBackground3": "#7C3AED50",
      "editorBracketPairGuide.activeBackground4": "#A855F750",
      "editorBracketPairGuide.activeBackground5": "#EC489950",
      "editorBracketPairGuide.activeBackground6": "#F59E0B50",
      
      // Overview rulers and minimap
      "editorOverviewRuler.findMatchForeground": "#FEF08A80",
      "editorOverviewRuler.modifiedForeground": "#2563EB80",
      "editorOverviewRuler.addedForeground": "#16A34A80",
      "editorOverviewRuler.deletedForeground": "#DC262680",
      "editorOverviewRuler.errorForeground": "#DC2626",
      "editorOverviewRuler.warningForeground": "#EA580C",
      "editorOverviewRuler.infoForeground": "#2563EB",
      "minimap.selectionHighlight": "#BFDBFE80",
      "minimap.errorHighlight": "#DC2626",
      "minimap.warningHighlight": "#EA580C",
      "minimap.background": "#F9FAFBCC",
      
      // Scrollbars
      "scrollbar.shadow": "#00000010",
      "scrollbarSlider.background": "#64748B30",
      "scrollbarSlider.hoverBackground": "#64748B50",
      "scrollbarSlider.activeBackground": "#64748B70"
    },
    "tokenColors": [
      // General
      {
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": {
          "foreground": "#64748B",
          "fontStyle": "italic"
        }
      },
      {
        "scope": ["string", "constant.other.symbol"],
        "settings": {
          "foreground": "#16A34A"
        }
      },
      {
        "scope": ["constant.numeric", "constant.language", "constant.character", "constant.other"],
        "settings": {
          "foreground": "#EA580C"
        }
      },
      {
        "scope": ["variable", "variable.parameter", "meta.definition.variable entity.name.function"],
        "settings": {
          "foreground": "#2563EB"
        }
      },
      {
        "scope": ["variable.other.constant", "variable.language"],
        "settings": {
          "foreground": "#7C3AED"
        }
      },
      {
        "scope": ["storage", "storage.type", "storage.modifier", "keyword"],
        "settings": {
          "foreground": "#7C3AED"
        }
      },
      {
        "scope": ["entity.name.function", "support.function"],
        "settings": {
          "foreground": "#2563EB"
        }
      },
      {
        "scope": ["entity.name.type", "entity.other.inherited-class", "support.class", "support.type"],
        "settings": {
          "foreground": "#0D9488"
        }
      },
      {
        "scope": ["keyword.operator", "meta.tag"],
        "settings": {
          "foreground": "#475569"
        }
      },
      // Markdown specific - important for writing
      {
        "scope": ["markup.heading"],
        "settings": {
          "foreground": "#7C3AED",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["markup.heading.1"],
        "settings": {
          "foreground": "#6D28D9",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["markup.heading.2"],
        "settings": {
          "foreground": "#7C3AED",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["markup.heading.3"],
        "settings": {
          "foreground": "#8B5CF6",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["markup.heading.4"],
        "settings": {
          "foreground": "#A78BFA",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["markup.heading.5", "markup.heading.6"],
        "settings": {
          "foreground": "#C4B5FD",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["markup.bold"],
        "settings": {
          "foreground": "#334155",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["markup.italic"],
        "settings": {
          "foreground": "#334155",
          "fontStyle": "italic"
        }
      },
      {
        "scope": ["markup.list"],
        "settings": {
          "foreground": "#2563EB"
        }
      },
      {
        "scope": ["markup.list.numbered"],
        "settings": {
          "foreground": "#1D4ED8"
        }
      },
      {
        "scope": ["markup.list.unnumbered"],
        "settings": {
          "foreground": "#2563EB"
        }
      },
      {
        "scope": ["markup.quote"],
        "settings": {
          "foreground": "#64748B",
          "fontStyle": "italic"
        }
      },
      {
        "scope": ["markup.inline.raw", "markup.fenced_code", "markup.raw.block"],
        "settings": {
          "foreground": "#16A34A"
        }
      },
      {
        "scope": ["markup.link"],
        "settings": {
          "foreground": "#2563EB"
        }
      },
      {
        "scope": ["markup.link.url", "markup.underline.link"],
        "settings": {
          "foreground": "#3B82F6",
          "fontStyle": "underline"
        }
      },
      {
        "scope": ["markup.link.entity"],
        "settings": {
          "foreground": "#3B82F6"
        }
      },
      {
        "scope": ["markup.strikethrough"],
        "settings": {
          "foreground": "#94A3B8",
          "fontStyle": "strikethrough"
        }
      },
      {
        "scope": ["meta.separator"],
        "settings": {
          "foreground": "#94A3B8",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["markup.inserted"],
        "settings": {
          "foreground": "#16A34A"
        }
      },
      {
        "scope": ["markup.deleted"],
        "settings": {
          "foreground": "#DC2626"
        }
      },
      {
        "scope": ["markup.changed"],
        "settings": {
          "foreground": "#EA580C"
        }
      }
    ]
  }